<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:background="#4542FF"
    android:layout_height="64dp"
    android:orientation="horizontal">
    <ImageView
        android:layout_marginRight="10dp"
        android:src="@drawable/icon"
        android:id="@+id/notifi_boot_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:id="@+id/notifi_boot_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginRight="45dp"
        android:textSize="13dp"
        android:textColor="#ffffff"
        android:id="@+id/notifi_boot_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/notifi_boot_alat"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:src="@drawable/compas"/>
        <ImageView
            android:id="@+id/notifi_boot_main"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:src="@drawable/icon"/>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.setsunajin.asisten"
	android:versionCode="1"
	android:versionName="1.0">

	<uses-sdk
		android:minSdkVersion="14"
		android:targetSdkVersion="21"/>

	<uses-permission
		android:name="android.permission.READ_EXTERNAL_STORAGE"/>

	<uses-permission
		android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

	<uses-permission
		android:name="android.permission.ACCESS_WIFI_STATE"/>

	<uses-permission
		android:name="android.permission.ACCESS_NETWORK_STATE"/>

	<uses-permission
		android:name="android.permission.ACCESS_FINE_LOCATION"/>

	<uses-permission
		android:name="android.permission.INTERNET"/>

	<uses-permission
		android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

	<uses-permission
		android:name="android.permission.CAMERA"/>

	<uses-permission
		android:name="android.permission.VIBRATE"/>

	<uses-permission
		android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

	<uses-feature
		android:name="android.hardware.touchscreen"
		android:required="false"/>

	<application
		android:allowBackup="true"
		android:icon="@drawable/icon_db"
		android:label="@string/app_name"
		android:theme="@style/AppTheme"
		android:resizeableActivity="true">

		<activity
			android:name=".MainActivity"
			android:label="@string/app_name">

			<intent-filter>

				<action
					android:name="android.intent.action.MAIN"/>

				<category
					android:name="android.intent.category.LAUNCHER"/>

			</intent-filter>

		</activity>

		<activity
			android:name="com.setsunajin.asisten.MainFileManager"
			android:label="Filemanager">

			<intent-filter>

				<action
					android:name="android.intent.action.VIEW"/>

				<action
					android:name="android.intent.action.EDIT"/>

				<category
					android:name="android.intent.category.DEFAULT"/>

				<category
					android:name="android.intent.category.BROWSABLE"/>

				<category
					android:name="android.intent.category.GADGET"/>

				<data
					android:host="*"
					android:mimeType="*/*"
					android:pathPattern=".*\\.txt"
					android:scheme="file"/>

				<data
					android:host="*"
					android:mimeType="*/*"
					android:pathPattern=".*\\.php"
					android:scheme="file"/>

				<data
					android:host="*"
					android:mimeType="*/*"
					android:pathPattern=".*\\.css"
					android:scheme="file"/>

				<data
					android:host="*"
					android:mimeType="*/*"
					android:pathPattern=".*\\.js"
					android:scheme="file"/>

				<data
					android:host="*"
					android:mimeType="*/*"
					android:pathPattern=".*\\.html"
					android:scheme="file"/>

				<data
					android:host="*"
					android:mimeType="*/*"
					android:pathPattern=".*\\..*"
					android:scheme="file"/>

				<data
					android:host="*"
					android:mimeType="*/*"
					android:pathPattern=".*"
					android:scheme="file"/>

				<data
					android:mimeType="*/*"/>

			</intent-filter>

		</activity>

		<activity
			android:name="com.setsunajin.asisten.MainBrowser"
			android:label="Advended Browser">

			<intent-filter>

				<action
					android:name="android.intent.action.VIEW"/>

				<category
					android:name="android.intent.category.DEFAULT"/>

				<category
					android:name="android.intent.category.BROWSABLE"/>

				<data
					android:scheme="http"/>

				<data
					android:scheme="https"/>

			</intent-filter>

		</activity>

		<activity
			android:name="com.setsunajin.asisten.MainSubdomner"
			android:label="Subdomner idx"
			android:configChanges="orientation"
			android:screenOrientation="portrait"/>

		<activity
			android:name="com.setsunajin.asisten.MainApkExtrak"
			android:label="Apk Extraktor"/>

		<activity
			android:name="com.setsunajin.asisten.MainBrowserNotif"
			android:label="Browser Notif"/>

		<activity
			android:name="com.setsunajin.asisten.MainKompas"
			android:label="Kompas"/>

		<activity
			android:name="com.setsunajin.asisten.MainPengaturan"
			android:label="Asisten Pengaturan"/>

		<activity
			android:name="com.setsunajin.asisten.MainTerminal"
			android:label="Linux Shell"/>

		<activity
			android:name="com.setsunajin.asisten.MainCatatan"
			android:label="Note Manager"
			android:theme="@android:style/Theme.Translucent.NoTitleBar"/>

		<activity
			android:name="com.setsunajin.asisten.memori.MainMemori"
			android:label="Memori Manager"/>

		<activity
			android:name="com.setsunajin.asisten.task.MainTaskManager"
			android:label="Task Manager"/>

		<activity
			android:name="com.setsunajin.asisten.task.TaskList"
			android:label="Task Manager"/>

		<activity
			android:name="com.setsunajin.asisten.MainReadJson"
			android:label="JSON to clipboard"/>

		<activity
			android:name="com.setsunajin.asisten.MainRemoteClip"
			android:label="Server to clipboard"/>

		<service
			android:name="com.setsunajin.asisten.MainMouse"
			android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
			android:enabled="true"
			android:exported="false">

			<intent-filter>

				<action
					android:name="android.accessibilityservice.AccessibilityService"/>

			</intent-filter>

			<meta-data
				android:name="android.accessibilityservice"
				android:resource="@xml/mouse"/>

		</service>

		<service
			android:name="com.setsunajin.asisten.MainKeyboard"
			android:permission="android.permission.BIND_INPUT_METHOD">

			<intent-filter>

				<action
					android:name="android.view.InputMethod"/>

			</intent-filter>

			<meta-data
				android:name="android.view.im"
				android:resource="@xml/keybwifi">

			</meta-data>

		</service>

		<service
			android:enabled="true"
			android:name="com.setsunajin.asisten.ServicesBoot"/>

		<service
			android:enabled="true"
			android:name="com.setsunajin.asisten.ServiceWindow"/>

		<service
			android:enabled="true"
			android:name="com.setsunajin.asisten.task.ServiceStatus"/>

		<receiver
			android:name="com.setsunajin.asisten.ReceiverBoot">

			<intent-filter>

				<action
					android:name="android.intent.action.BOOT_COMPLETED"/>

			</intent-filter>

		</receiver>

	</application>

</manifest>

